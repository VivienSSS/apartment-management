package web

//base for each html page

type BaseHTMLProps struct {
	Metadata templ.Component
}

templ BaseHTML(props BaseHTMLProps) {
	<html>
		<head>
			<script src="./assets/flyonui.js"></script>
			<link rel="stylesheet" href="./assets/out.css"/>
			<script defer src="./assets/alpine-collapse.min.js"></script>
			<script defer src="./assets/alpine.min.js"></script>
			<script defer src="./assets/flyonui.js"></script>
			@props.Metadata
		</head>
		<body>
			{ children... }
		</body>
	</html>
}
